pipeline {
    agent any
    environment {
        LABS = credentials('labcreds')
    }
    stages {
        stage('Build') {
            steps {
                sh '/home/iamsumit244/.local/bin/pipenv --rm || exit 0'
                sh '/home/iamsumit244/.local/bin/pipenv install'
            }
        }
        stage('Test') {
            steps {
                sh '/home/iamsumit244/.local/bin/pipenv run pytest'
            }
        }
        stage('Package') {
            steps {
                sh 'zip -r retailproject.zip .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'sshpass -p $LABS_PSW scp -o StrictHostKeyChecking=no -r .
                $LABS_USR@g01.itversity.com:/home/itv021476/retailproject'
            }
        }
    }
}